# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build rest`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t rest`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system rest && \
  adduser --system -G rest rest

COPY dist/apps/rest rest
RUN chown -R rest:rest .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix rest --omit=dev -f install

COPY prisma rest/prisma

RUN (cd rest; npx prisma generate)

CMD [ "node", "rest" ]
